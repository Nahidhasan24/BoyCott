<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.ListFragment">

    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/top_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="10">

            <AutoCompleteTextView
                android:id="@+id/searchET"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:background="@drawable/search_bg"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawableEnd="@drawable/baseline_close_24"
                android:drawablePadding="10dp"
                android:hint="Search..."
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/filterBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                android:background="@drawable/search_bg"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_filter_alt_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:text="Filter"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/round_bg_section"
            android:weightSum="12">

            <Button
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:text="All Products"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white" />

            <Button
                android:id="@+id/boycottListBtn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:text="Boycott List"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white" />

            <Button
                android:id="@+id/mylistBtn"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:text="My List"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:id="@+id/textViewSpinnerBrand"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:text="Select Brand" />

            <TextView
                android:id="@+id/textViewSpinnerCategory"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:text="Select Category" />

            <TextView
                android:id="@+id/textViewSpinnerLocation"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/spinner_bg"
                android:gravity="center"
                android:text="Select Location" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/productCountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Shows 1023 Products"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sortTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productCountTv"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/red"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/products_item"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:id="@+id/productArrayList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sortTextView"
        android:layout_marginTop="10dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/emptyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Empty List"
        android:textSize="20sp"
        android:visibility="gone" />
</RelativeLayout>
